{
  "name": "ngx-chat",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ngx-chat-ui/src",
  "prefix": "ngx-chat",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ngx-chat-ui/ng-package.json",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngx-chat-ui/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngx-chat-ui/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --build --force --verbose libs/ngx-chat-ui/tsconfig.json"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/ngx-chat-ui/**/*.ts", "libs/ngx-chat-ui/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/angular:karma",
      "options": {
        "lintFilePatterns": ["libs/ngx-chat-ui/**/*.ts", "libs/ngx-chat-ui/**/*.html"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version"
    }
  },
  "tags": []
}
